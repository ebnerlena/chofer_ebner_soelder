{% extends "base.twig" %}

{% block header %}
    <section class="index__header">
        <div class="topnav" id="topnav" role="banner">
            <h1 class="logo-h1">
                <a class="logo-a" href="{{site.url}}" rel="home">{{site.name}}</a>
            </h1>
            {% include "menu.twig" with {'items': mainmenu.get_items} %}
        </div>
        <div class="content-headertext">
            <h1 class="headertext">{{post.meta("header-text")}}</h1>
        </div>
        <div class="content-bottom">
            <div class="music-player">
                <span>{{frontpage.meta("title")}}</span>
                <audio controls>
                    <source src={{frontpage.meta("audio")}}>
                </audio>
            </div>
            <a class="header-icon-link" href="#index-about-anchor">
                <svg class="header-icon-arrow-down"></svg>
            </a>
            <a href="/book-me" class="book-now-button">
                BOOK NOW!
            </a>
        </div>
    </section>
{% endblock %}

{% block content %}
    <section id="index-about-anchor" class="index__about">
        <div class="about-img">
        </div>
        <div class="about-text maxwidthcontainer">
            <h2><span>Who</span> am I?</h2>
            <article>
                <p>Hi, i’m <span>Chris!</span></p>
                <p>I’ve been playing music since i was a child 
                    and have never stopped chasing my musical dreams.</p>
                <p>Check out my music at soundcloud and book me for every event you like.</p>
                <p>Birthdays, Christmas Events, Gigs...</p>
                <p><span>I do them all</span></p>
            </article>
        </div>
    </section>

    <section class="index__gigs">
        <h2>Upcoming <span>Gigs</span></h2>
        <div class="gigs__container maxwidthcontainer">
            {% for post in gigs %}
                <article style="background-image:url({{post.thumbnail.src}})" class="gigs__single-post">
                    <div class="gigs__top-header">
                        <h2>{{post.meta("city")}}</h2>
                    </div>
                    <div class="gigs__content">
                        <h2 class="gigs__date">{{post.meta("date")}}</h2>
                        <h2 class="gigs__venue">{{post.meta("venue")}}</h2>
                        <span class="gigs__address">{{post.meta("address")}}</span>
                    </div>
                    <a class="gigs__button" href="/book-me" target="_self">Buy ticket</a>
                </article>
            {% endfor %}
        </div>
    </section>

    <section class="index__news">
        <h2>Latest <span>News</span></h2>
        <div class="news__container maxwidthcontainer">
            {% for post in latestnews %}
                <article class="news__single-post">
                    <div class="news__start-style"></div>
                    <div class="news__content">
                        <h3>{{ post.title }}</h3> 
                        <p> {{ post.get_preview(50) }} </p>
                    </div>
                </article>
            {% endfor %}
        </div>

        <div class="waves">
            <span class="wave"></span>
            <span class="wave"></span>
            <span class="wave"></span>
        </div>
    </section>

    <section class="index__services">
        <h2><span>Book</span> me</h2>
        <div class="services__container maxwidthcontainer"> 
            {% for post in services %}
                <article class="single-service">
                    <h3>{{ post.title }} </h3> 
                    <div> {{ post.content }} </div>
                    <a href="/book-me">Book</a>
                </article>
            {% endfor %}
        </div>
        <div class="services__number"> 
            <svg width="107" height="100" viewBox="0 0 107 100" fill="none" xmlns="http://www.w3.org/2000/svg">
